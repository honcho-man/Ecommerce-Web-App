								span
								span
				else
					.col-8.general-bars.text-right.pl-0.pr-0.pt-2.pb-2.d-md-none.d-block
						button.p-0.m-0.bars.true
							#nav-icon2
								span
								span
								span
								span
								span
								span
	.space.mt-5
